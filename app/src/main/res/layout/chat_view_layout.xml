<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardElevation="24dp"
    app:cardCornerRadius="16dp"
    android:padding="24dp"
    android:layout_margin="8dp"
    android:background="@drawable/cardview_background_users">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_users_list_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="130dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/user_logo_ProfileActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_card_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAMED"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="22dp"
            app:layout_constraintStart_toEndOf="@+id/cv_users_list_logo"
            app:layout_constraintTop_toTopOf="@+id/cv_users_list_logo" />

        <TextView
            android:id="@+id/tv_card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONLINE"
            android:textStyle="bold"
            android:textColor="#63FF00"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv_users_list_logo"
            app:layout_constraintEnd_toEndOf="@+id/tv_card_username"
            app:layout_constraintStart_toEndOf="@+id/cv_users_list_logo"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_username" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>