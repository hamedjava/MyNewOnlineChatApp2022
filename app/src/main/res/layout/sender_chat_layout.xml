<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:padding="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/layout_of_senderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_chat_drawable">

        <TextView
            android:id="@+id/tv_sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Sender Text Message Sender"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>


        <TextView
            android:id="@+id/tv_sender_timeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:20"
            android:textColor="#686868"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_sender_message"
            android:textSize="14dp"
            android:layout_marginRight="40dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="6dp"/>

    </RelativeLayout>


</RelativeLayout>